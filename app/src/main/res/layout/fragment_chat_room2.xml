<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".live.ChatRoomFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mChatRoomRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f1f2f7"
        android:overScrollMode="never"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_bg_fa"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <ToggleButton
            android:id="@+id/mSwitchInputType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/color_price"
            android:textOff=""
            android:textOn="" />

        <EditText
            android:id="@+id/mChatRoomEdit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:imeOptions="actionSend" />

        <ToggleButton
            android:id="@+id/mBtnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/color_price"
            android:textOff=""
            android:textOn="发送" />

    </LinearLayout>

</LinearLayout>