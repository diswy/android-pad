<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mAudioOtherAvatar"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <Space
        android:id="@+id/mAudioStartSpace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mAudioChatRoomNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            tools:text="昵称" />

        <LinearLayout
            android:id="@+id/mAudioPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/chat_bg_me"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorWhite"
                tools:text="20“" />

            <Space
                android:layout_width="32dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/animation_inner_voice" />

        </LinearLayout>


    </LinearLayout>

    <Space
        android:id="@+id/mAudioEndSpace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/mAudioMyAvatar"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>