<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/img_subject"
        android:layout_width="80dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_subject"
        android:lines="1"
        android:textColor="@color/color_text_title"
        tools:text="这里是试卷名字这里是试卷名字这里是试卷名字" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_name"
        android:layout_below="@id/text_name"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="13sp"
        tools:text="第五答题2小题" />

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_name"
        android:layout_below="@id/text_question"
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        tools:text="题型:选这题" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_subject"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/text_subject"
        android:gravity="right"
        android:text="2017.12.5" />
</RelativeLayout>