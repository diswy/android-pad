<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <gorden.widget.selector.SelectorButton
            android:id="@+id/btn_verify"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:textSize="12sp"
            app:s_radius="5dp"
            app:s_solid_color="#d5d5d5"
            app:s_solid_enable_color="#dddddd"
            app:s_solid_pressed_color="#c7c7c7"
            app:s_text_color="#333"
            app:s_text_enable_color="#7d7d7d" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_verify"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="请输入验证码"
        android:inputType="number"
        android:paddingLeft="25dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="请输入账号密码"
        android:paddingLeft="25dp"
        android:textSize="15sp" />
</LinearLayout>