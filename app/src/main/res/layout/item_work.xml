<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="语"
        android:background="@drawable/bg_subject1"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="第二学期语文期末联系题A卷"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:textColor="#333"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_subject"
        app:layout_constraintLeft_toRightOf="@id/text_subject"
        />
    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/text_name"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        tools:text="共21题"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="新作业"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_count"
        />
    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="截止时间:12.05 14:23"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_count"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="布置时间:2017.12.05"
        app:layout_constraintLeft_toLeftOf="@id/text_count"
        app:layout_constraintTop_toBottomOf="@id/text_count"
        android:layout_marginTop="5dp"
        />
</android.support.constraint.ConstraintLayout>