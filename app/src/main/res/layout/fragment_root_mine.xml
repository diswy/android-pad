<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="match_parent"
        android:background="@color/mine_menu_bg"
        android:divider="@drawable/my_divider"
        android:orientation="vertical"
        android:showDividers="end|middle">

        <FrameLayout
            android:id="@+id/btnMine"
            android:layout_width="match_parent"
            android:layout_height="244px"
            android:background="@color/mine_photo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="28px"
                    tools:text="青龙" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/mine_share"
                android:drawablePadding="42px"
                android:text="我的分享"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnMsg"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/item_message"
                android:drawablePadding="42px"
                android:text="消息中心"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnHeadman"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvHeadman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/item_headman"
                android:drawablePadding="42px"
                android:text="小组长管理"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnCallback"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tvCallback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/item_opinion"
                android:drawablePadding="42px"
                android:text="意见反馈"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tvClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/item_cache"
                android:drawablePadding="42px"
                android:text="清除缓存"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="64px"
                android:drawableStart="@drawable/item_exit"
                android:drawablePadding="42px"
                android:text="退出登录"
                android:textColor="@color/mine_menu_title"
                android:textSize="36px" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mineContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>