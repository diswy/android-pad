<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mCourseImg"
        android:layout_width="116dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:ellipsize="end"
        android:id="@+id/mTitle"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/color_subtitle_dark"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/mCourseImg"
        app:layout_constraintTop_toTopOf="@+id/mCourseImg"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/mTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_subtitle_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mTitle"
        app:layout_constraintTop_toBottomOf="@+id/mTitle"
        tools:text="主讲老师：张老师" />

    <TextView
        android:id="@+id/mGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/mTeacher"
        app:layout_constraintTop_toBottomOf="@+id/mTeacher"
        tools:text="年级：八年级" />

    <TextView
        android:visibility="gone"
        android:id="@+id/mCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_subtitle_grey"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/mTeacher"
        app:layout_constraintTop_toBottomOf="@+id/mTitle"
        tools:text="课程节数：1" />

</android.support.constraint.ConstraintLayout>