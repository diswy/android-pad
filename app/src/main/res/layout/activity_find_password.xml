<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <android.support.v7.widget.CardView
        android:layout_width="620px"
        android:layout_height="700px"
        android:layout_marginTop="179px"
        android:layout_marginRight="378px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reset_pwd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35px"
                android:singleLine="true"
                android:text="重置密码"
                android:textColor="@color/color_CCCCCC"
                android:textSize="60px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="418px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:drawableStart="@drawable/login_name"
                android:drawablePadding="17px"
                android:hint="请输入用户名"
                android:lineSpacingExtra="75px"
                android:singleLine="true"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="28px"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reset_pwd_title" />

            <TextView
                android:id="@+id/btn_verify"
                android:layout_width="120px"
                android:layout_height="35px"
                android:layout_marginTop="20px"
                android:layout_marginRight="10px"
                android:background="@drawable/getidentifyingcode_shape"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/mine_photo"
                android:textSize="20px"
                app:layout_constraintRight_toRightOf="@+id/edit_username"
                app:layout_constraintTop_toTopOf="@+id/edit_username" />

            <EditText
                android:id="@+id/edit_verify"
                android:layout_width="418px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:drawableStart="@drawable/ic_verify_code"
                android:drawablePadding="17px"
                android:hint="请输入验证码"
                android:lineSpacingExtra="75px"
                android:singleLine="true"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="28px"
                app:layout_constraintLeft_toLeftOf="@+id/edit_username"
                app:layout_constraintTop_toBottomOf="@+id/edit_username" />

            <EditText
                android:id="@+id/edit_confirm_pwd"
                android:layout_width="418px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:drawableStart="@drawable/login_pwd"
                android:drawablePadding="17px"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:lineSpacingExtra="75px"
                android:singleLine="true"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="28px"
                app:layout_constraintLeft_toLeftOf="@+id/edit_username"
                app:layout_constraintTop_toBottomOf="@+id/edit_verify" />

            <EditText
                android:id="@+id/repeat_new_pwd"
                android:layout_width="418px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:drawableStart="@drawable/login_pwd"
                android:drawablePadding="17px"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:lineSpacingExtra="75px"
                android:singleLine="true"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="28px"
                app:layout_constraintLeft_toLeftOf="@+id/edit_username"
                app:layout_constraintTop_toBottomOf="@+id/edit_confirm_pwd" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="420px"
                android:layout_height="60px"
                android:layout_marginTop="58px"
                android:background="@drawable/login_btn_shape"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="32px"
                app:layout_constraintLeft_toLeftOf="@id/repeat_new_pwd"
                app:layout_constraintTop_toBottomOf="@+id/repeat_new_pwd" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>

