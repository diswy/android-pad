<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_avatar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张一山"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_flower3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_flower3"
                android:textColor="@color/colorWhite"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/text_flower2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_flower2"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/text_flower1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_flower1"
                android:textColor="@color/colorWhite"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4">
        <LinearLayout
            android:id="@+id/item_flower_list"
            app:layout_columnWeight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hhb"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="红花榜"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_like_list"
            android:gravity="center"
            android:layout_height="80dp"
            app:layout_columnWeight="1"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_dzb"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="点赞榜"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_my_share"
            android:gravity="center"
            android:layout_height="80dp"
            app:layout_columnWeight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_wdfx"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="我的分享"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_height="80dp"
            app:layout_columnWeight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_sc"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="收藏"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_height="80dp"
            app:layout_columnWeight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_xgmm"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="修改密码"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_about"
            android:gravity="center"
            android:layout_height="80dp"
            app:layout_columnWeight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_about"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="关于"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</LinearLayout>