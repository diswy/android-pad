<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/shape_bg_white_border">

    <TextView
        android:id="@+id/mTvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:textColor="#716f6f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018.06.23 21:00:00" />

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mTvTime"
        tools:text="未阅读" />

    <ImageView
        android:id="@+id/mIvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_msg_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mTvTime"
        app:layout_constraintTop_toBottomOf="@+id/mTvTime" />

    <TextView
        android:id="@+id/mTvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/tv33"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/mIvType"
        app:layout_constraintEnd_toStartOf="@id/mHolder"
        app:layout_constraintStart_toEndOf="@+id/mIvType"
        app:layout_constraintTop_toTopOf="@+id/mIvType"
        tools:text="200000000000000" />

    <ImageButton
        android:id="@+id/mHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_end_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/mIvType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mIvType" />


</android.support.constraint.ConstraintLayout>